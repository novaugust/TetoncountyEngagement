<section class="content-section row">
  <h2 class="col-xs-12 content-section-header">
    {{#link-to "news" class="content-section-header-text"}}News{{/link-to}}
  </h2>
  {{#each model.news as |news|}}
  <article class="content-item col-md-6">
    {{#link-to "news" (query-params articleId=news.id) class="content-item-image"}}
      <img class="content-item-main-image" {{bind-attr src=news.media.url}}>
      <img class="content-item-logo" src="assets/images/icon-bcc.png">
    {{/link-to}}
    <h3 class="content-item-title">{{news.title}}</h3>
    <time class="content-item-date">{{news.date}}</time>
  </article>
  {{/each}}
</section>

<section class="content-section row">
  <h2 class="col-xs-12 content-section-header">
    {{#link-to "meetings" class="content-section-header-text"}}Meetings{{/link-to}}
  </h2>
  {{#each model.meetings as |meeting|}}
  <article class="content-item col-md-6">
    {{#link-to "meetings" (query-params meeting=meeting.id) class="content-item-image"}}
      <img class="content-item-main-image" {{bind-attr src=meeting.media.url}}>
      <img class="content-item-logo" src="assets/images/icon-plan.png">
    {{/link-to}}
    <h3 class="content-item-title">{{meeting.title}}</h3>
    <time class="content-item-date">{{meeting.date}}</time>
    <ul class="content-item-list">
      {{#each meeting.links as |link|}}
      <li><a {{bind-attr href=link.url}}>{{link.description}}</a></li>
      {{/each}}
    </ul>
  </article>
  {{/each}}
</section>

<section class="content-section row">
  <h2 class="col-xs-12 content-section-header">
    {{#link-to "media" class="content-section-header-text"}}Photos{{/link-to}}
  </h2>
  {{bs-carousel media=model.media id="landing-page-carousel" class="col-xs-12 carousel slide"}}
</section>
