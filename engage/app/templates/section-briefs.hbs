{{! NEWS}}
<section class="content-section row">
  <h2 class="col-xs-12 content-section-header">
    {{#link-to "news" class="content-section-header-text"}}News{{/link-to}}
  </h2>
  {{#each model.news as |news|}}
  <article class="col-xs-12 content-item calendar-item">
    {{! @TODO investigate using bootstrap media component}}
    {{#link-to "news" (query-params articleId=news.id) class="briefs-image"}}
      <img class="img-responsive" {{bind-attr src=news.media.url}}>
    {{/link-to}}
    <h2 class="content-item-header">{{news.title}}</h2>
  </article>
  {{/each}}
</section>

{{! MEETINGS}}
<section class="content-section row">
  <h2 class="col-xs-12 content-section-header">
    {{#link-to "meetings" class="content-section-header-text"}}Meetings{{/link-to}}
  </h2>
  {{#each model.meetings as |meeting|}}
  <article class="col-xs-12 content-item calendar-item">
    {{! @TODO investigate using bootstrap media component}}
    {{#link-to "meetings" class="briefs-image"}}
      <img class="img-responsive" {{bind-attr src=meeting.media.url}}>
    {{/link-to}}
    <h2 class="content-item-header">{{meeting.title}}</h2>
    <p class="small content-item-excerpt">Aspernatur deleniti commodi quod qui itaque, reiciendis inventore ...</p>
  </article>
  {{/each}}
</section>

{{! MENTIONS}}
<section class="content-section row">
  <h2 class="col-xs-12 content-section-header">
    {{#link-to "mentions" class="content-section-header-text"}}Community Mentions{{/link-to}}
  </h2>
  <div class="col-xs-12 content-item">
    <ul class="list-group">
      {{#each model.mentions as |mention|}}
      <li class="list-group-item community-mention">
        {{link-to mention.body "mentions" class="community-mention-link"}}
        <cite class="community-mention-source"><a href="#">{{mention.title}}</a></cite>
      </li>
      {{/each}}
    </ul>
  </div>
</section>

{{! RELATED}}
<section class="content-section row">
  <h2 class="col-xs-12 content-section-header">
    {{#link-to "related" class="content-section-header-text"}}Related Pages{{/link-to}}
  </h2>
  <div class="col-xs-12 content-item">
    <ul class="list-group">
      {{#each model.related as |related|}}
      <li class="list-group-item community-mention">
        {{#link-to "related" class="community-mention-link"}}
          {{related.title}}
        {{/link-to}}
      </li>
      {{/each}}
    </ul>
  </div>
</section>
